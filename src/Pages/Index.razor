@page "/"

<div class="main box mt-4">
    <h1 class="text-center">
        24点解法计算器
    </h1>
    <div class="text-center">
        <small class="text-muted">Blazor WASM / .NET @Environment.Version</small>
    </div>
    <hr />
    
    <EditForm Model="Poker24Model" OnValidSubmit="async () => await GetResults()">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="row mb-2">
            <div class="col">
                <input type="number" class="form-control" placeholder="数值1" id="input-num1" spellcheck="false" @bind="Poker24Model.Num1" min="1" max="13"/>
            </div>
            <div class="col">
                <input type="number" class="form-control" placeholder="数值2" id="input-num2" spellcheck="false" @bind="Poker24Model.Num2" min="1" max="13"/>
            </div>
            <div class="col">
                <input type="number" class="form-control" placeholder="数值3" id="input-num3" spellcheck="false" @bind="Poker24Model.Num3" min="1" max="13"/>
            </div>
            <div class="col">
                <input type="number" class="form-control" placeholder="数值4" id="input-num4" spellcheck="false" @bind="Poker24Model.Num4" min="1" max="13"/>
            </div>
            <div class="col">
                <button class="btn btn-success" type="submit">
                    @if (Loading)
                    {
                        <span id="loadingIndicator" class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    }
                    求解
                </button>
            </div>
        </div>
    </EditForm>
   
    
    <hr />
    <div class="result-box mt-2">
        <ul class="list-unstyled">
            @foreach (var item in ResultList)
            {
                <li>@item</li>
            }
        </ul>
    </div>
</div>

<div class="mt-3 text-center">
    <a href="https://edi.wang" target="_blank">Edi Wang</a>
</div>